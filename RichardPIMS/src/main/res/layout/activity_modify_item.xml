<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView
        android:id="@+id/mod_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#f0f0f0"
        android:fadingEdge="vertical"
        android:paddingBottom="20dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="466dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.11"
            android:paddingRight="10dp">

            <TableRow
                android:id="@+id/mod_Title01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mod_Title01_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="基本信息"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="30dp"/>
            </TableRow>

            <RadioGroup
                android:id="@+id/mod_isInHospital"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/mod_treating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:checked="false"
                    android:text="正在治疗"/>

                <RadioButton
                    android:id="@+id/mod_treated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:checked="false"
                    android:text="已出院"/>
            </RadioGroup>

            <TableRow
                android:id="@+id/mod_tableRow02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="张三"
                    android:maxLines="1">

                    <requestFocus/>
                </EditText>

                <TextView
                    android:id="@+id/mod_textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_sex"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="男/女"
                    android:maxLines="1"
                    android:maxLength="1"/>

                <TextView
                    android:id="@+id/mod_textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="数字"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/mod_textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="月/年"
                    android:inputType="date"/>

                <TextView
                    android:id="@+id/mod_textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生年月"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_fundRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Something to remark"/>

                <TextView
                    android:id="@+id/mod_textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mod_textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="住院后"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="30dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_SN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="7位纯数字"
                    android:inputType="number"
                    android:maxLength="7"/>

                <TextView
                    android:id="@+id/mod_textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="住院号"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_inHospitalDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="日/月/年"
                    android:inputType="date"/>

                <TextView
                    android:id="@+id/mod_textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入院日期"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_diagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"/>

                <TextView
                    android:id="@+id/mod_textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入院诊断"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/mod_TableRow02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mod_TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手术后"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginTop="10dp"
                    android:textSize="30dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_surgeryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="日/月/年"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/mod_textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手术日期"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"
                    android:inputType="date" />
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_surgeon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"

                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/mod_textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手术师"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_specialWay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"/>

                <TextView
                    android:id="@+id/mod_textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="特殊术式"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_pathologicalDiagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"/>

                <TextView
                    android:id="@+id/mod_textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="病理诊断"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_pathlogicNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="6位纯数字"
                    android:inputType="number"
                    android:maxLength="6"/>

                <TextView
                    android:id="@+id/mod_TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="病理号"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_TableRow08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_surgeryRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"/>

                <TextView
                    android:id="@+id/mod_TextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_TableRow07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mod_TextView09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="出院后"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="30dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_TableRow05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_outDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="日/月/年"
                    android:inputType="date"/>

                <TextView
                    android:id="@+id/mod_TextView07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出院日期"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_TableRow04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_reviewPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="天"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/mod_TextView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="复查周期"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_TableRow03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_oralMedication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"/>

                <TextView
                    android:id="@+id/mod_TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="口服药物"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/mod_tableRow15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/mod_outRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"/>

                <TextView
                    android:id="@+id/mod_TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp"/>
            </TableRow>

            <Button
                android:id="@+id/mod_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成并保存"/>
        </TableLayout>
    </ScrollView>
</RelativeLayout>