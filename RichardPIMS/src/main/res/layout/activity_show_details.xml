<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@+id/show_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#f0f0f0"
        android:fadingEdge="vertical"
        android:paddingBottom="20dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="466dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.11"
            android:paddingRight="10dp">

            <TableRow
                android:id="@+id/show_Title01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/show_Title01_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="基本信息"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_isTreated"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:maxLines="1"
                    android:textSize="18dp">
                </TextView>

                <TextView
                    android:id="@+id/Text_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="治疗状况"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="张三"
                    android:maxLines="1"
                    android:textSize="18dp">

                    <requestFocus />
                </TextView>

                <TextView
                    android:id="@+id/show_textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_sex"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="男/女"
                    android:maxLines="1"
                    android:maxLength="1"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="数字"
                    android:inputType="number"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="月/年"
                    android:inputType="date"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生年月"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_fundRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Something to remark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/show_textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="住院后"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_SN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="7位纯数字"
                    android:inputType="number"
                    android:maxLength="7"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="住院号"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_inHospitalDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="日/月/年"
                    android:inputType="date"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入院日期"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_diagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入院诊断"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_TableRow02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/show_TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手术后"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginTop="10dp"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_surgeryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="日/月/年"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手术日期"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_surgeon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"

                    android:maxLines="1"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手术师"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_specialWay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="特殊术式"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_pathologicalDiagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="病理诊断"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_pathlogicNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="6位纯数字"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="病理号"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_TableRow08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_surgeryRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_TextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_TableRow07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/show_TextView09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="出院后"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_TableRow05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_outDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="日/月/年"
                    android:inputType="date"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_TextView07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出院日期"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_TableRow04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_reviewPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="天"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_TextView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="复查周期"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_TableRow03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_oralMedication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="口服药物"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <TableRow
                android:id="@+id/show_tableRow15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:editable="false"
                    android:id="@+id/show_outRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/show_TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="45dp" />
            </TableRow>

            <Button
                android:id="@+id/delete_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除本条目" />
        </TableLayout>
    </ScrollView>
</RelativeLayout>